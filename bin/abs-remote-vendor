#!/bin/bash
#
#   abs remote vendor
#

    root=$( cd "$(dirname "$(realpath ${BASH_SOURCE[0]})")/.." ; pwd -P );
    name=$( basename $0 | sed 's/-/ /g' );


    # | function(s)

        function help {
            echo "help: missing."
        }

        function usage {
            echo "usage: $name {bitbucket}"
        }

    # function(s) |


    # | main

        # argv check
        if [ $# -eq 0 ]; then
            usage
            exit 2
        fi

        # help check
        if [ "$1" == "--help" ] | [ "$1" == -h ]; then
            help
            exit 1
        fi

        # script
        script="$1"
        shift

        # arg(s) - type
        case "$script" in
            'bitbucket')    "$root/bin/abs-remote-vendor-bitbucket" $@
                            ;;
            'help')         help
                            ;;
            *)              usage
                            ;;
        esac

    # main |


#
#   <$--$)
#
