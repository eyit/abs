#!/bin/bash
#
#   abs remote
#

    root=$( cd "$(dirname "$(realpath ${BASH_SOURCE[0]})")/.." ; pwd -P );
    name=$( basename $0 | sed 's/-/ /g' );


    # | function(s)

        function help {
            echo "help: help missing"
        }

        function usage {
            echo "usage: $name {add,help,remove,vendor}"
        }

    # function(s) |


    # | main

        # argv check
        if [ $# -eq 0 ]; then
            usage
            exit 1
        fi

        # help check
        if [ "$1" == "--help" ] | [ "$1" == -h ]; then
            help
            exit 1
        fi

        # script
        script="$1"
        shift

        # arg(s) - type
        case "$script" in
            'add')          "$root/bin/abs-remote-add" $@
                            ;;
            'help')         help
                            ;;
            'remove')       "$root/bin/abs-remote-remove" $@
                            ;;
            'vendor')       "$root/bin/abs-remote-vendor" $@
                            ;;
            *)              usage
                            ;;
        esac

    # main |


#
#   <$--$)
#
