#!/bin/bash
#
#   abs
#




    # global(s)
    script=$( basename $0 )
    verbose=1




    # | abs

        function abs {

            # action
            action="$1"
            shift

            # argument(s)
            while getopts ":b:d:v" FLAG; do
                case "$FLAG" in
                    b)  branch="$OPTARG"
                        ;;
                    d)  directory="$OPTARG"
                        ;;
                    v)  verbose=0
                        ;;
                esac
            done

            # log - init
            log "Initiating '$action'"

            # check - optional
            [ -z "$branch"      ] && branch='master'
            [ -z "$directory"   ] && directory='.'

            # check - dir
            [ ! -d "$directory" ] && error "Bad directory '$directory'" && exit 2

            # relative -> absolute
            directory=$( realpath "$directory" )

            # log - directory
            log "Found directory '$directory'"

            # log - directory - search
            log "Searching directory..."
            log "Found '`find "$directory" -name "*.git" | wc -l`' GIT repositories"

            # find - git(s)
            for git in `find "$directory" -name "*.git" | sort`; do

                # directory
                cd "$git"

                # check - bare
                if [[ "`git rev-parse --is-bare-repository`" == "false" ]]; then
                    cd ".."
                fi

                # find remote(s)
                for remote in `git remote`; do

                    # git - action - remote - branch
                    git "$action" "$remote" "$branch" &> /dev/null

                    # ? - result -> log
                    if [ $? -eq 0 ]; then
                        log   "${action^^}"" '$git' '$remote:$branch'"
                    else
                        error "ERROR '$git' '$remote:$branch'"
                    fi

                done

            done

            # return
            return 0

        }

    # abs |


    # | utility(s)

        function error {
            if [ $verbose -eq 0 ]; then
                logger -s -p user.error -t "$script" "$@"
            else 
                logger    -p user.error -t "$script" "$@"
            fi
        }

        function log {
            if [ $verbose -eq 0 ]; then
                logger -s -p user.notice -t "$script" "$@"
            else 
                logger    -p user.notice -t "$script" "$@"
            fi
        }

        function usage {
            echo "$0 usage: $0 [fetch|pull|push]"
        }

    # utility(s) |


    # | main

        # check - arg(s)
        [ $# -lt 1 ] && usage && exit 2

        # case - $1 - action
        case "$1" in
            fetch)      shift
                        abs "fetch" "$@"
                        ;;
            pull)       shift
                        abs "pull" "$@"
                        ;;
            push)       shift
                        abs "push" "$@"
                        ;;
            *)          usage
                        ;;
        esac

    # main |




