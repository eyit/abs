#!/bin/bash
#
#   abs
#

    root=$( cd "$(dirname "$(realpath ${BASH_SOURCE[0]})")/.." ; pwd -P );
    name=$( basename $0 | sed 's/-/ /g' );


    # | function(s)

        function help {
            echo "help: missing"
        }

        function usage {
            echo "usage: $name {help,fetch,push,pull,remote}"
        }

    # function(s) |


    # | main

        # argv check
        if [ $# -eq 0 ]; then
            usage
            exit 1
        fi

        # help check
        if [ "$1" == "--help" ] | [ "$1" == -h ]; then
            help
            exit 1
        fi

        # script
        script="$1"
        shift

        # arg(s) - type
        case "$script" in
            'fetch')        "$root/bin/abs-sync" "fetch" $@
                            ;;
            'push')         "$root/bin/abs-sync" "push" $@
                            ;;
            'pull')         "$root/bin/abs-sync" "pull" $@
                            ;;
            'remote')       "$root/bin/abs-remote" $@
                            ;;
            *)              usage
                            ;;
        esac

    # main |


#
#   <$--$)
#
